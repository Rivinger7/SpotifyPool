  </PropertyGroup>

	<PropertyGroup>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<DocumentationFile>bin\Debug\net8.0\BusinessLogicLayer.DependencyInjection.xml</DocumentationFile>
